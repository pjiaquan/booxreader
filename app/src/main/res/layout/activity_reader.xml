<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootReader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 閱讀區 -->
    <FrameLayout
        android:id="@+id/readerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="true"
        android:clipToPadding="true">

    </FrameLayout>

  
    <!-- 底部工具列：返回 / 加書籤 / 書籤列表 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp">

        <ImageButton
            android:id="@+id/btnAinote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/reader_ai_note"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/btnAddBookmark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/reader_bookmark"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_save"
            android:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/btnShowBookmarks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/reader_publish"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_share"
            android:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/btnChapters"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/reader_table_of_contents"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/reader_settings"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="?attr/colorControlNormal" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.ui.settings.AiProfileListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnImport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_ai_profile" />

    <Button
        android:id="@+id/btnSync"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ai_profile_sync"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnImport"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnImport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ai_profile_import_json"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/btnSync"
        app:layout_constraintEnd_toStartOf="@id/btnCreate"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ai_profile_create_new"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/btnImport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

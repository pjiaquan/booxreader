<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_original_label"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvOriginalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:textIsSelectable="true"/>

        <Button
            android:id="@+id/btnGoToPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_go_to_page"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_response_label"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvAiResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textIsSelectable="true"/>

        <Button
            android:id="@+id/btnPublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_publish_retry"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnRepublishSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_republish_selected"
            android:layout_marginTop="8dp"
            android:backgroundTint="#D84315"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/etFollowUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/ai_note_follow_up_hint"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="4" />

            <Button
                android:id="@+id/btnFollowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_note_publish"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbLoading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- 浮動滾動到底按鈕 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnScrollToBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_more"
        android:contentDescription="@string/ai_note_scroll_to_bottom"
        android:backgroundTint="?attr/colorPrimary"
        android:tint="@android:color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        app:borderWidth="0dp" />

</RelativeLayout>

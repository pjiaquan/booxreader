<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="0dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_original_label"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvOriginalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:textIsSelectable="true"/>

        <Button
            android:id="@+id/btnGoToPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_go_to_page"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_response_label"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvAiResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textIsSelectable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvAiModelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888"
                android:text="Model: --" />

            <TextView
                android:id="@+id/tvAiDisclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888"
                android:text="@string/ai_note_model_disclaimer"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_publish_retry"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnRepublishSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_republish_selected"
            android:layout_marginTop="8dp"
            android:backgroundTint="#D84315"
            android:textColor="#FFFFFF"/>

        <!-- Disclaimer -->
        <TextView
            android:id="@+id/tvAiInputDisclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_note_input_disclaimer"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"/>

        <!-- Magic Tags -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgMagicTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true" />

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp">

            <EditText
                android:id="@+id/etFollowUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/ai_note_follow_up_hint"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="4" />

            <Button
                android:id="@+id/btnFollowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_note_publish"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbLoading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- 浮動滾動到底按鈕 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnScrollToBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/arrow_down_float"
        android:contentDescription="@string/ai_note_scroll_to_bottom"
        android:backgroundTint="@android:color/transparent"
        android:tint="@android:color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        app:borderWidth="0dp" />

    <TextView
        android:id="@+id/tvAutoScrollHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/ai_note_auto_scroll_paused"
        android:textSize="12sp"
        android:textColor="#555555"
        android:visibility="gone" />

</RelativeLayout>

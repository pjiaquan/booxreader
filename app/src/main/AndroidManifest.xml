<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Storage permissions for EPUB file download and access -->
    <!-- Android 13+ media read permission (needed when targeting SDK 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- For Android 10 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" /> <!-- Only needed for Android 9 and below -->

    <!-- For app-specific storage (no permission needed for Android 10+) -->
    <!-- App can write to its own directories without permission -->

    <application
        android:name="my.hinoki.booxreader.BooxReaderApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <activity
            android:name="my.hinoki.booxreader.data.ui.welcome.WelcomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="my.hinoki.booxreader.data.ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity-alias
            android:name=".MainActivity"
            android:exported="true"
            android:targetActivity="my.hinoki.booxreader.data.ui.main.MainActivity" />

        <activity
            android:name="my.hinoki.booxreader.data.ui.reader.ReaderActivity"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:exported="false" />

        <activity
            android:name="my.hinoki.booxreader.ui.bookmarks.BookmarkListActivity"
            android:exported="false" />

        <activity
            android:name="my.hinoki.booxreader.data.ui.notes.AiNoteListActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:label="AI Notes" />

        <activity
            android:name="my.hinoki.booxreader.data.ui.notes.AiNoteDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:label="AI Note Details" />

        <activity
            android:name="my.hinoki.booxreader.data.auth.LoginActivity"
            android:exported="false"
            android:label="Login" />

        <activity
            android:name="my.hinoki.booxreader.data.auth.RegisterActivity"
            android:exported="false"
            android:label="Register" />

        <activity
            android:name="my.hinoki.booxreader.data.auth.UserProfileActivity"
            android:exported="false"
            android:label="Profile" />

        <activity
            android:name="my.hinoki.booxreader.data.ui.settings.AiProfileListActivity"
            android:exported="false"
            android:label="AI Profiles"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="my.hinoki.booxreader.data.ui.settings.AiProfileEditActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- FileProvider for secure file sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>
